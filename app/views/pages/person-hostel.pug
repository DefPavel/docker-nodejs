extends ../layouts/layout-sidebar

block style 
  link(type="text/css" rel="stylesheet" href="/assets/vendor/libs/datatables/datatables.css")

block content
  .container-fluid.flex-grow-1.container-p-y
    h4.d-flex.justify-content-between.align-items-center.py-2.mb-4
      .font-weight-bold=title_h.name
        .text-muted.text-tiny.mt-1
          small.font-weight-normal Сегодня, #{to_day}
      button.btn.btn-primary(type='button') Заселение &nbsp; 
        i.sidenav-icon.ion.ion-md-add 
    .card  
      h6.card-header Список проживающих  
      .card-datatable.table-responsive
        table.datatables-demo.table.table-striped.table-bordered
          thead 
            tr
              th №
              th Секция
              th Комната
              th Ф.И.О.
              th Принадлежность
              th Статус
              th Заселение
              th Выселение
          tbody   
            each val, key in person_items
              tr
                td= key
                td= val.section
                td= val.room
                td #{val.first_name} #{val.middle_name} #{val.last_name}
                td= val.status_person
                td= val.status
                td= val.date_settling
                td= val.date_eviction



